			<objective type="ZombieKill" value="5000" phase="1"/>
			<requirement type="Buff" id="buffHordeNightQuestTrackerNight" phase="1"/>

			<reward type="Exp" value="500000"/>
			<reward type="Item" id="casinoCoin" value="5000"/>
			<reward type="Item" id="itemSkillbookPage" value="100"/>

		</quest>

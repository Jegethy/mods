	<set xpath="/blocks/block[@name='chemistryStation']/property[@name='HeatMapTime']/@value">7000</set><!-- original: 5000 -->
	<set xpath="/blocks/block[@name='chemistryStation']/property[@name='HeatMapFrequency']/@value">2500</set><!-- original: 1000 -->

	<!-- Triples the fuel capacity of generators -->
	<set xpath="/blocks/block[@name='generatorbank']/property[@name='MaxFuel']/@value">8000</set>

	<!-- Changes bulletproof glass repair item -->
	<set xpath="/blocks/block[@name='glassBulletproofMaster']/property[@class='RepairItems']/property[@name='glassBulletproofBlockVariantHelper']/@name">resourceForgedSteel</set>
	<set xpath="/blocks/block[@name='windowStoreCornerBulletproof']/property[@class='RepairItems']/property[@name='glassBulletproofBlockVariantHelper']/@name">resourceForgedSteel</set>
	<set xpath="/blocks/block[@name='glassBulletproofMaster']/property[@class='RepairItems']/property[@name='resourceForgedSteel']/@value">10</set>
	<set xpath="/blocks/block[@name='windowStoreCornerBulletproof']/property[@class='RepairItems']/property[@name='resourceForgedSteel']/@value">10</set>

	<!-- Shotgun & SMG turret buffs 1.3 -->
	<set xpath="/blocks/block[@name='shotgunTurret']/property[@name='BurstRoundCount']/@value">8</set>
	<set xpath="/blocks/block[@name='shotgunTurret']/property[@name='MaxDistance']/@value">30</set>
	<set xpath="/blocks/block[@name='shotgunTurret']/property[@name='EntityDamage']/@value">20</set>
	<set xpath="/blocks/block[@name='shotgunTurret']/property[@name='BlockDamage']/@value">0</set>
	<set xpath="/blocks/block[@name='shotgunTurret']/property[@name='RaySpread']/@value">0</set>

	<set xpath="/blocks/block[@name='autoTurret']/property[@name='BurstRoundCount']/@value">30</set>
	<set xpath="/blocks/block[@name='autoTurret']/property[@name='MaxDistance']/@value">45</set>
	<set xpath="/blocks/block[@name='autoTurret']/property[@name='EntityDamage']/@value">48</set>
	<set xpath="/blocks/block[@name='autoTurret']/property[@name='BlockDamage']/@value">0</set>
	<set xpath="/blocks/block[@name='autoTurret']/property[@name='RaySpread']/@value">0</set>

	<remove xpath="/blocks/block[@name='autoTurret']/property[@name='WakeUpSound']"/>
	<remove xpath="/blocks/block[@name='autoTurret']/property[@name='FireSound']"/>
	<remove xpath="/blocks/block[@name='autoTurret']/property[@name='TargetingSound']"/>
	<remove xpath="/blocks/block[@name='autoTurret']/property[@name='OverheatSound']"/>
	<remove xpath="/blocks/block[@name='shotgunTurret']/property[@name='FireSound']"/>

	<set xpath="/blocks/block[@name='autoTurret']/property[@name='Material']/@value">Mmetal_harder</set>

	<!-- Bird nests and trash destroyed on looting -->
	<set xpath="/blocks/block[@name='cntBin']/property[@name='LootList']/@value">650</set>
	<set xpath="/blocks/block[@name='cntBruteStyleTrashCanFull']/property[@name='LootList']/@value">650</set>
	<set xpath="/blocks/block[@name='cntTiltTruckFull']/property[@name='LootList']/@value">650</set>
	<set xpath="/blocks/block[@name='cntTiltTruckFullFlies']/property[@name='LootList']/@value">650</set>
	<set xpath="/blocks/block[@name='cntBirdnest']/property[@name='Material']/@value">Mplants</set>

	<!-- Makes "bed" items pickup-able -->
	<append xpath="/blocks/block[contains(@name, 'bed')]">
		<property name="CanPickup" value="true"/>
	</append>

	<!-- Concrete dries faster -->
	<set xpath="/blocks/block[@name='pouredConcreteMaster']/property[@name='UpgradeRated.Rate']/@value">2</set>
	<set xpath="/blocks/block[@name='pouredRConcreteMaster']/property[@name='UpgradeRated.Rate']/@value">3</set>

	<!-- Iron drops ore again -->
	<set xpath="/blocks/block[@name='terrOreIron']/drop[@event='Harvest' and @name='resourceScrapIron']/@count">21</set>
	<set xpath="/blocks/block[@name='terrOreIron']/drop[@event='Harvest' and @name='resourceScrapIron']/@name">resourceIronFragment</set>
	<set xpath="/blocks/block[@name='terrOreIron']/drop[@event='Fall' and @name='resourceScrapIron']/@name">resourceIronFragment</set>

	<set xpath="/blocks/block[@name='oreIronBoulder']/drop[@event='Harvest' and @name='resourceScrapIron']/@count">21</set>
	<set xpath="/blocks/block[@name='oreIronBoulder']/drop[@event='Harvest' and @name='resourceScrapIron']/@name">resourceIronFragment</set>


	<!-- Gold Studded Ring - 60% Movement speed, no stamina regen while running, 20% reduced while walking, sometimes fall over -->

	<append xpath="/buffs">	
		<buff name="buffaccessoryGoldStuddedRing" name_key="buffaccessoryGoldStuddedRingName" description_key="buffaccessoryGoldStuddedRingDesc" tooltip_key="buffaccessoryGoldStuddedRingTooltip" icon="norunning" remove_on_death="false">
			<stack_type value="ignore"/>
			<update_rate value="0.3"/>
			<effect_group>
				<requirement name="PlayerLevel" operation="LT" value="1000"/>
				<passive_effect name="HypothermalResist" operation="base_add" value="5"/>
				<passive_effect name="HyperthermalResist" operation="base_add" value="5"/>
				<passive_effect name="BuffBlink" operation="base_set" value="2" duration="0,10" tags="buffaccessoryGoldStuddedRing"/>
				<passive_effect name="WalkSpeed" operation="perc_add" value=".60"/>
			</effect_group>

			<effect_group>
				<passive_effect name="StaminaChangeOT" operation="perc_add" value="-1" tags="running"/>
				<passive_effect name="StaminaChangeOT" operation="perc_add" value="-.2" tags="walking"/>

				<triggered_effect trigger="onSelfBuffUpdate" action="Ragdoll" duration=".3">
					<requirement name="!EntityTagCompare" tags="trader"/>
					<requirement name="EntityHasMovementTag" tags="running"/>
					<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="9"/>
				</triggered_effect>

				<triggered_effect trigger="onSelfFallImpact" action="Ragdoll" duration=".3">
					<requirement name="!EntityTagCompare" tags="trader"/>
					<requirement name="CVarCompare" cvar="_fallSpeed" operation="GTE" value=".02"/>
					<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="20"/>
				</triggered_effect>
			</effect_group>
		</buff>
	</append>


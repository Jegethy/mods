<configs>
	<append xpath="/items">
		<item name="meleeScarecrow">
			<property name="Extends" value="meleeHandZombieBurning"/>
			<property name="CreativeMode" value="None"/>
			<property class="Action0">
				<property name="DamageEntity" value="64"/>
				<property name="DamageBlock" value="42"/></property>
			<effect_group name="meleeHandZombieBurningFeral" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="0"/>
				<passive_effect name="BuffProcChance" operation="base_set" value=".8" tags="buffBurningZombie"/>
				<passive_effect name="BuffProcChance" operation="base_set" value=".8" tags="buffInjuryBleedingZombie"/>
				<triggered_effect trigger="onSelfDamagedOther" action="ModifyCVar" target="other" cvar="infectionZombieHit" operation="set" value="45"/>
				<!--InfectionFeral-->
			</effect_group>
		</item>
	</append>
	
	<append xpath="/items">
		<item name="killscarecrow_start">
			<property name="CreativeMode" value="Player"/>
			<property name="HoldType" value="21"/>
			<property name="Meshfile" value="#Other/Items?Misc/bookPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="Mpaper"/>
			<property name="EconomicValue" value="2500"/>
			<property name="SellableToTrader" value="false"/>
			<property class="Action0">
				<property name="Class" value="Quest"/>
				<property name="Delay" value="1"/>
				<property name="QuestGiven" value="quest_killscarecrow"/>
			</property>
			<property name="FuelValue" value="2"/>
			<property name="Weight" value="2"/>
			<property name="Group" value="Special Items"/>
			<property name="name_key" value="killscarecrow_start" />
			<property name="desc_key" value="killscarecrow_startDesc" />
			<property name="CustomIcon" value="eventFlamingPumpkin"/>
			<property name="Stacknumber" value="200"/>
		</item>
	</append>

	<append xpath="/items">

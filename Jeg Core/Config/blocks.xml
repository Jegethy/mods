<config>

	<!-- Safes are harder to smash open -->
	<append xpath="/blocks/block[@name='cntWallSafe']">
		<property name="MaxDamage" value="9000"/><!-- original: 2500  -->
	</append>
	<append xpath="/blocks/block[@name='cntGunSafe']">
		<property name="MaxDamage" value="18000"/><!-- original: 5000  -->
	</append>
	<append xpath="/blocks/block[@name='cntHardenedChestSecure']">
		<property name="MaxDamage" value="30000"/><!-- original: 10000  -->
	</append>

	<!-- Campfire, force and work stations generate more heat -->
	<set xpath="/blocks/block[@name='campfire']/property[@name='HeatMapStrength']/@value">7</set><!-- original: 5    -->
	<set xpath="/blocks/block[@name='campfire']/property[@name='HeatMapTime']/@value">7000</set><!-- original: 5000 -->
	<set xpath="/blocks/block[@name='campfire']/property[@name='HeatMapFrequency']/@value">2000</set><!-- original: 1000 -->
	<set xpath="/blocks/block[@name='forge']/property[@name='HeatMapStrength']/@value">8</set><!-- original: 6    -->
	<set xpath="/blocks/block[@name='forge']/property[@name='HeatMapTime']/@value">7000</set><!-- original: 5000 -->
	<set xpath="/blocks/block[@name='forge']/property[@name='HeatMapFrequency']/@value">2000</set><!-- original: 1000 -->
	<set xpath="/blocks/block[@name='workbench']/property[@name='HeatMapStrength']/@value">4</set><!-- original: 2    -->
	<set xpath="/blocks/block[@name='workbench']/property[@name='HeatMapTime']/@value">7000</set><!-- original: 5000 -->
	<set xpath="/blocks/block[@name='workbench']/property[@name='HeatMapFrequency']/@value">2500</set><!-- original: 1000 -->
	<set xpath="/blocks/block[@name='cementMixer']/property[@name='HeatMapStrength']/@value">4</set><!-- original: 2    -->
	<set xpath="/blocks/block[@name='cementMixer']/property[@name='HeatMapTime']/@value">7000</set><!-- original: 5000 -->
	<set xpath="/blocks/block[@name='cementMixer']/property[@name='HeatMapFrequency']/@value">2500</set><!-- original: 1000 -->

			<action type="ShowTip" value="quest_tier1completeBonusTip">
				<property name="delay" value="3"/>
			</action>
			<action type="TrackQuest">
				<property name="delay" value="3"/>
			</action>

			<objective type="ZombieKill" value="500" phase="1"/>
			<requirement type="Buff" id="buffHordeNightQuestTrackerNight" phase="1"/>

			<reward type="Quest" id="quest_tier1completeBonusExtra">
				<property name="chainquest" value="false"/>
			</reward>

			<reward type="Exp" value="50000"/>
			<reward type="Item" id="casinoCoin" value="500"/>
			<reward type="Item" id="itemSkillbookPage" value="10"/>

		</quest>
	</append>

	<append xpath="/quests">
		<quest id="quest_tier1completeBonusExtra">

			<property name="group_name_key" value="quest_tier1completeBonusExtra_group2"/>

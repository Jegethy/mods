<configs>

	<!-- Silver Ring - Cannot use Melee weapons, 75% more Ranged damage -->

	<append xpath="/buffs">	
		<buff name="buffaccessorySilverRing" name_key="buffaccessorySilverRingName" description_key="buffaccessorySilverRingDesc" tooltip_key="buffaccessorySilverRingTooltip" icon="rangedonly" remove_on_death="false">
			<stack_type value="ignore"/>
			<effect_group>
				<requirement name="PlayerLevel" operation="LT" value="1000"/>
				<passive_effect name="HypothermalResist" operation="base_add" value="5"/>
				<passive_effect name="HyperthermalResist" operation="base_add" value="5"/> 
				<passive_effect name="BuffBlink" operation="base_set" value="2" duration="0,10" tags="buffaccessorySilverRing"/>
			</effect_group>

			<effect_group>
				<passive_effect name="DisableItem" operation="base_set" value="1" tags="meleeAccessorise" />
				<passive_effect name="EntityDamage" operation="perc_add" value=".75" tags="rangedAccessorise"/>
			</effect_group>
		</buff>
	</append>


				<display_value name="dStaminaRegen" value=".25"/>
				<display_value name="dPlayerExpGain" value=".25"/>
				<display_value name="dDuration" value="300"/>

				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="$buffDrugEyeKandyxDuration" operation="add" value="303"/>

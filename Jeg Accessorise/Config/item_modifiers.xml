<configs>

	<!-- Speed Accessory Mod -->
	<append xpath="/item_modifiers">
		<item_modifier name="modAccessoriseMovementSpeed" installable_tags="accessorise" type="attachment">
			<property name="DisplayType" value="modAccessoriseSpeed"/>
			<property name="Stacknumber" value="1"/>
			<property name="Group" value="modAccessorise"/>
			<property name="name_key" value="modAccessoriseMovementSpeed"/>
			<property name="description_key" value="modAccessoriseMovementSpeedDesc"/>
			<property name="CustomIcon" value="modAccessoriseSpeed"/>
			<property name="EconomicValue" value="3850"/>

			<effect_group tiered="false">
				<passive_effect name="WalkSpeed" operation="perc_add" value=".10"/>
				<passive_effect name="RunSpeed" operation="perc_add" value=".10"/>
				<display_value name="dWalkSpeed" value=".10"/>
				<display_value name="dRunSpeed" value=".10"/>
			</effect_group>
		</item_modifier>
	</append>

	<!-- Damage Accessory Mod -->
	<append xpath="/item_modifiers">
		<item_modifier name="modAccessoriseDamage" installable_tags="accessorise" type="attachment">
			<property name="DisplayType" value="modAccessoriseDamage"/>
			<property name="Stacknumber" value="1"/>
			<property name="Group" value="modAccessorise"/>
			<property name="name_key" value="modAccessoriseDamage"/>
			<property name="description_key" value="modAccessoriseDamageDesc"/>
			<property name="CustomIcon" value="modAccessoriseDamage"/>
			<property name="EconomicValue" value="3850"/>

			<effect_group tiered="false">
				<passive_effect name="EntityDamage" operation="perc_add" value=".10"/>
				<passive_effect name="BlockDamage" operation="perc_add" value=".10"/>
				<display_value name="dEntityDamage" value=".10"/>
				<display_value name="dBlockDamage" value=".10"/>
			</effect_group>
		</item_modifier>
	</append>

	<!-- Health Accessory Mod -->
	<append xpath="/item_modifiers">
		<item_modifier name="modAccessoriseHealth" installable_tags="accessorise" type="attachment">
			<property name="DisplayType" value="modAccessoriseHealth"/>
			<property name="Stacknumber" value="1"/>
			<property name="Group" value="modAccessorise"/>
			<property name="name_key" value="modAccessoriseHealth"/>
			<property name="description_key" value="modAccessoriseHealthDesc"/>
			<property name="CustomIcon" value="modAccessoriseHealth"/>
			<property name="EconomicValue" value="3850"/>

			<effect_group tiered="false">
				<passive_effect name="HealthMax" operation="base_add" value="20"/>
				<display_value name="dMaxHealthBonus" value="20"/>
			</effect_group>
		</item_modifier>
	</append>

	<!-- Stamina Accessory Mod -->
	<append xpath="/item_modifiers">
		<item_modifier name="modAccessoriseStamina" installable_tags="accessorise" type="attachment">
			<property name="DisplayType" value="modAccessoriseStamina"/>
			<property name="Stacknumber" value="1"/>
			<property name="Group" value="modAccessorise"/>
			<property name="name_key" value="modAccessoriseStamina"/>
			<property name="description_key" value="modAccessoriseStaminaDesc"/>
			<property name="CustomIcon" value="modAccessoriseStamina"/>
			<property name="EconomicValue" value="3850"/>

			<effect_group tiered="false">
				<passive_effect name="StaminaMax" operation="base_add" value="20"/>
				<display_value name=".foodStaminaBonusAdd" value="20"/>
			</effect_group>
		</item_modifier>
	</append>

	<!-- Armour Accessory Mod -->
	<append xpath="/item_modifiers">
		<item_modifier name="modAccessoriseArmour" installable_tags="accessorise" blocked_tags="armouredNeck" type="attachment">
			<property name="DisplayType" value="modAccessoriseArmour"/>
			<property name="Stacknumber" value="1"/>
			<property name="Group" value="modAccessorise"/>
			<property name="name_key" value="modAccessoriseArmour"/>
			<property name="description_key" value="modAccessoriseArmourDesc"/>
			<property name="CustomIcon" value="modAccessoriseArmour"/>
			<property name="EconomicValue" value="3850"/>

			<effect_group tiered="false">
				<passive_effect name="PhysicalDamageResist" operation="base_add" value="5"/>
			</effect_group>
		</item_modifier>
	</append>

	<!-- Harvest Accessory Mod -->
	<append xpath="/item_modifiers">

<configs>

	<!-- Slightly increases the amount of items bought and sold by traders -->
	<set xpath="/traders/trader_info/@min_inventory">60</set>
	<set xpath="/traders/trader_info/@max_inventory">120</set>
	<set xpath="/traders/trader_info/@min_items_swapped">60</set>
	<set xpath="/traders/trader_info/@max_items_swapped">120</set>

	<!-- Modifies how often the trader's inventory will refresh -->
	<set xpath="/traders/trader_info/@reset_interval">3</set>

	<!-- Modifies the opening and closing times of the trader -->
	<set xpath="/traders/trader_info/@open_time">3:30</set>
	<set xpath="/traders/trader_info/@close_time">22:30</set>

	<!-- Updates the trader with modified face items -->
	<remove xpath="/traders/trader_info[@id='3']" />

	<remove xpath="/traders/trader_info/tier_items[@level='3000,3999']/item[@name='cntVendingMachine']"/>
	<remove xpath="/traders/trader_info/tier_items[@level='4000,4999']/item[@name='cntVendingMachine']"/>

	<insertAfter xpath="/traders/trader_info/tier_items[@level='5000,-1']/item[@name='drinkJarGrandpasForgettingElixir']">
		<item name="resourceAdamantium2" count="1" prob="0.1"/>
	</insertAfter>

	<append xpath="/traders">
		<trader_info id="3" full_reset="true" reset_interval="1" override_buy_markup="5.0" override_sell_markup="1.0" allow_sell="false" player_owned="false" min_inventory="2" max_inventory="16" min_items_swapped="24" max_items_swapped="48">
			<trader_items count="8">
				<item name="foodRapeseedOil" count="2,20"/>
				<item group="books" />
				<item name="bookHammerTimeDamage" count="1" prob="0.01"/>
				<item name="bookHammerTimeHarvest" count="1" prob="0.01"/>
				<item name="bookHammerTimeDefense" count="1" prob="0.01"/>
				<item name="bookHammerTimeDoorKey" count="1" prob="0.01"/>
				<item name="bookHammerTimeProtect" count="1" prob="0.01"/>
				<item name="bookHammerTimeUnstoppable" count="1" prob="0.01"/>
				<item name="bookHammerTimeDrunk" count="1" prob="0.01"/>
				<item name="itemSpawnerBookBear" count="1" prob="0.4"/>
				<item name="itemSpawnerBookPig" count="1" prob="0.4"/>
				<item name="itemSpawnerBookChickens" count="1" prob="0.4"/>
				<item name="itemSpawnerBookDirewolf" count="1" prob="0.4"/>
				<item name="itemSpawnerBookWorkmen" count="1" prob="0.4"/>
				<item name="itemSpawnerBookNurse" count="1" prob="0.4"/>
				<item name="itemSpawnerBookCop" count="1" prob="0.4"/>
				<item name="itemSpawnerBookDemo" count="1" prob="0.4"/>
				<item name="resourceAdamantium2" count="1" prob="0.1"/>
				<item group="foodCandy" count="1" prob="0.70"/>
			</trader_items>
		</trader_info>	
	</append>

	<insertAfter xpath="/traders/trader_info/tier_items[@level='5000,-1']/item[@name='drinkJarGrandpasForgettingElixir']">
		<item name="bigEngine" prob="0.02"/>
		<item name="vehicleHelicopterChassis" prob="0.01"/>
		<item name="vehicleHelicopterRotor" prob="0.01"/>
		<item name="vehicleHelicopterChassisSchematic" prob="0.02"/>
		<item name="vehicleHelicopterRotorSchematic" prob="0.02"/>
	</insertAfter>

	<insertAfter xpath="/traders/trader_item_groups/trader_item_group[@name='traderAlways']/item[@group='foodAll']">
		<item name="foodRapeseedOil" count="5,50"/>
	</insertAfter>

	<set xpath="/traders/trader_item_groups/trader_item_group[@name='groupQuestChallenge']/@count">3</set>

	<insertAfter xpath="/traders/trader_item_groups/trader_item_group[@name='groupQuestChallenge']/item[@name='qt_raphael']">
		<item name="itemSpawnerBookBear" count="1" prob="0.4"/>
		<item name="itemSpawnerBookPig" count="1" prob="0.4"/>
		<item name="itemSpawnerBookChickens" count="1" prob="0.4"/>
		<item name="itemSpawnerBookDirewolf" count="1" prob="0.4"/>
		<item name="itemSpawnerBookWorkmen" count="1" prob="0.4"/>
		<item name="itemSpawnerBookNurse" count="1" prob="0.4"/>
		<item name="itemSpawnerBookCop" count="1" prob="0.4"/>
		<item name="itemSpawnerBookDemo" count="1" prob="0.4"/>
	</insertAfter>	

	<!-- Turret probability nerf -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='stashOnlyItemsLow']/item[@name='autoTurret']/@prob">0.05</set>
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='stashOnlyItemsLow']/item[@name='shotgunTurret']/@prob">0.08</set>

	<!-- Ammo shouldn't be as common -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammo9mmBulletBall']/@count">10,22</set> <!-- 40,150 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammo9mmBulletAP']/@count">10,22</set> <!-- 40,150 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammo762mmBulletBall']/@count">8,13</set> <!-- 20,100 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammo762mmBulletAP']/@count">8,13</set> <!-- 20,100 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammo44MagnumBulletBall']/@count">4,7</set> <!-- 15,60 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammo44MagnumBulletAP']/@count">4,7</set> <!-- 15,60 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammoShotgunShell']/@count">4,13</set> <!-- 15,100 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammoShotgunSlug']/@count">3,6</set> <!-- 6,25 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammoRocketHE']/@count">1,2</set> <!-- 1,4 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='ammo']/item[@name='ammoRocketFrag']/@count">1,2</set> <!-- 1,4 -->

	<!-- Building materials should be rare too -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='constructionSupplies']/item[@name='resourceCement']/@count">50,150</set> <!-- 50,500 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='constructionSupplies']/item[@name='resourceCobblestones']/@count">50,150</set> <!-- 50,500 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='constructionSupplies']/item[@name='resourceConcreteMix']/@count">50,150</set> <!-- 100,500 -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='books']/item[@group='schematicsToolsRare']/@prob">0.005</set>

	<!-- Removing several items from traders -->
	<!-- Steel Tools -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='meleeToolPickT2SteelPickaxe']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='meleeToolShovelT2SteelShovel']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='meleeToolAxeT2SteelAxe']"/>

	<!-- Iron Tools -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='meleeToolPickT1IronPickaxe']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='meleeToolShovelT1IronShovel']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='meleeToolAxeT1IronFireaxe']"/>

	<!-- Steel Weapons -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='meleeWpnSledgeT3SteelSledgehammer']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='weaponsMeleeT2']/item[@name='meleeWpnSledgeT3SteelSledgehammer']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='weaponsMeleeT2']/item[@name='meleeWpnClubT3SteelClub']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='weaponsMeleeT2']/item[@name='meleeWpnSpearT3SteelSpear']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='weaponsMeleeT2']/item[@name='meleeWpnKnucklesT3SteelKnuckles']"/>

	<!-- Forged iron and steel -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='resourceForgedIron']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='resourceForgedSteel']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='generalResources']/item[@name='resourceForgedIron']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='generalResources']/item[@name='resourceForgedSteel']"/>

	<!-- Vehicles -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='vehiclePartsT0']/item[@name='vehicleMinibikePlaceable']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='vehiclePartsT0']/item[@name='vehicleMotorcyclePlaceable']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='vehiclePartsT1']/item[@name='vehicle4x4TruckPlaceable']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='vehiclePartsT1']/item[@name='vehicleGyrocopterPlaceable']"/>

	<!-- Wrench -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='schematicsToolsCommon']/item[@name='meleeToolSalvageT1WrenchSchematic']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='meleeToolSalvageT1Wrench']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='meleeToolSalvageT2Ratchet']"/>
	<!-- Auger -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='meleeToolPickT3Auger']"/>

	<!-- Crucible -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='stashOnlyItemsHigh']/item[@name='toolForgeCrucible']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='rareTools']/item[@name='toolForgeCrucible']"/>

	<!-- Work stations -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='workstations']/item[@name='forge']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='workstations']/item[@name='workbench']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='workstations']/item[@name='cementMixer']"/>
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='workstations']/item[@name='chemistryStation']"/>


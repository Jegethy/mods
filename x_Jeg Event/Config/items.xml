					<requirement name="CVarCompare" cvar="$buffDrugEyeKandyxDuration" operation="GT" value="903"/></triggered_effect>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffDrugHalloweenCandy1"/>

			<property name="Group" value="modAccessorise"/>
			<property name="name_key" value="modAccessoriseHarvest"/>
			<property name="description_key" value="modAccessoriseHarvestDesc"/>
			<property name="CustomIcon" value="modAccessoriseHarvest"/>
			<property name="EconomicValue" value="3850"/>

			<effect_group tiered="false">
				<passive_effect name="HarvestCount" operation="perc_add" value="1" tags="cropHarvest,wildCropsHarvest"/>
